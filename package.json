  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@hono/vite-dev-server": "^0.16.0",
    "@types/bun": "latest",
    "@types/react": "npm:@hono/react-compat",
    "@types/react-dom": "npm:@hono/react-compat",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
